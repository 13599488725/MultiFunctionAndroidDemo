<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/bg"
                android:fitsSystemWindows="true"
                android:layout_height="match_parent">
    <include
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar"
        layout="@layout/titlebar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/title_bar"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="17dp"
                android:id="@+id/group1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.umeng.soexample.analytics.views.FuncTitle
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:umfunctitle="事件统计"/>
                <com.umeng.soexample.analytics.views.Function
                    android:id="@+id/analytics_g1_b1"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    app:umfuncname="track事件"
                    app:umfuncdesc="功能介绍"/>
                <com.umeng.soexample.analytics.views.Function
                    android:id="@+id/analytics_g1_b2"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    app:umfuncname="自定义的track事件"
                    app:umfuncdesc="功能介绍"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/group2"
                android:layout_below="@id/group1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="17dp">
                <com.umeng.soexample.analytics.views.FuncTitle
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:umfunctitle="超级属性"/>
                <com.umeng.soexample.analytics.views.Function
                    android:id="@+id/analytics_g2_b1"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    app:umfuncname="设置超级属性"
                    app:umfuncdesc="功能介绍"/>
                <com.umeng.soexample.analytics.views.Function
                    android:id="@+id/analytics_g2_b2"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    app:umfuncname="获取超级属性"
                    app:umfuncdesc="功能介绍"/>
                <com.umeng.soexample.analytics.views.Function
                    android:id="@+id/analytics_g2_b3"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    app:umfuncname="清除超级属性"
                    app:umfuncdesc="功能介绍"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group3"
                android:layout_below="@id/group2"
                android:layout_width="match_parent"
                android:layout_marginTop="17dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.umeng.soexample.analytics.views.FuncTitle
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:umfunctitle="首次触发事件"/>
                <com.umeng.soexample.analytics.views.Function
                    android:id="@+id/analytics_g3_b1"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    app:umfuncname="关注首次触发事件"
                    app:umfuncdesc="功能介绍"/>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
